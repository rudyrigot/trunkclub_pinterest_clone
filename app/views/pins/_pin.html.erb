<section class="clean well pin">
  <h3><%= link_to pin.title, pin %></h3>
  <% if pin.description.present? %>
    <p class="description"><%= link_to truncate(pin.description, length: 100, separator: ' '), pin %></p>
  <% end %>
  <p>
    <em>
      <small>
        Pinned <span title="<%= pin.created_at %>"><%= time_ago_in_words pin.created_at %> ago</span>
        on <%= link_to pin.board.user.full_name, pin.board.user %>'s' "<%= link_to pin.board.title, pin.board %>"
      </small>
    </em>
  </p>
  <% if user_signed_in? && pin.can_be_edited_by?(current_user) %>
    <p class="admin-icons">
      <%= link_to edit_pin_path(pin), title: 'Edit this pin', data: { toggle:"tooltip", placement:"bottom" } do %>
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      <% end %>
      <%= link_to pin, method: :delete, title: 'Delete this pin', data: { toggle:"tooltip", placement:"bottom", confirm: "Are you sure you want to delete this board? There is no coming back!" } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
    </p>
  <% end %>
</section>
